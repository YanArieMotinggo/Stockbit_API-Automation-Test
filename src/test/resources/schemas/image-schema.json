{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["status", "code", "total", "data"],
  "properties": {
    "status": { "type": "string", "enum": ["OK"] },
    "code": { "type": "integer" },
    "locale": { "type": "string" },
    "total": { "type": "integer", "minimum": 0 },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "description", "url"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "url": { "type": "string" }
        }
      }
    }
  }
}

